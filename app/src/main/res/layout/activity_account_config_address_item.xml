<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/spacing_medium"
    android:background="@drawable/bg_details_account_config">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pattern_light"
        android:textSize="@dimen/font_size_small"
        android:textAppearance="@style/Exo2_Regular_Small_Title"
        android:text="@string/adresses_client_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_street_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pattern_light"
        android:text="@string/street_name_adresses_one"
        android:textSize="@dimen/font_size_small"
        android:textAppearance="@style/Exo2_Regular_Small_Title"
        android:layout_marginTop="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@+id/user_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_neighborhood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/district_city_adresses_one"
        android:textSize="@dimen/font_size_small"
        android:textColor="@color/pattern_light"
        android:textAppearance="@style/Exo2_Regular_Small_Title"
        android:layout_marginTop="@dimen/spacing_medium"
        app:layout_constraintTop_toBottomOf="@+id/title_street_name"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title_cep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cep_adresses_one"
        android:textSize="@dimen/font_size_small"
        android:textColor="@color/pattern_light"
        android:textAppearance="@style/Exo2_Regular_Small_Title"
        android:layout_marginTop="@dimen/spacing_medium"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_neighborhood"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/ic_edit_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit_account_config"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>