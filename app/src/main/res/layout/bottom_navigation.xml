<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_navigation">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_home"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/ic_navigation_bar_home_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/spacing_sm"
        android:layout_marginStart="@dimen/spacing_maximum"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textColor="@color/pattern_light"
        android:textAppearance="@style/Exo2_Regular_Subtitle"
        app:layout_constraintEnd_toEndOf="@+id/image_home"
        app:layout_constraintStart_toStartOf="@+id/image_home"
        app:layout_constraintTop_toBottomOf="@+id/image_home" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_category"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:src="@drawable/ic_navigation_bar_category_icon"
        app:layout_constraintTop_toTopOf="@id/image_home"
        app:layout_constraintStart_toEndOf="@id/image_home"
        android:layout_marginStart="@dimen/spacing_max_m"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Categoria"
        android:textAppearance="@style/Exo2_Regular_Subtitle"
        android:textColor="@color/pattern_light"
        app:layout_constraintEnd_toEndOf="@+id/image_category"
        app:layout_constraintStart_toStartOf="@+id/image_category"
        app:layout_constraintTop_toBottomOf="@+id/image_category" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_logo"
        android:layout_width="@dimen/spacing_max_xxl"
        android:layout_height="@dimen/spacing_max_xxl"
        android:src="@drawable/ic_blue_logo"
        app:layout_constraintStart_toEndOf="@+id/image_category"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="@dimen/spacing_max_m"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_favorite"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="@dimen/spacing_max_m"
        android:src="@drawable/ic_navigation_bar_favorite_icon"
        app:layout_constraintStart_toEndOf="@+id/image_logo"
        app:layout_constraintTop_toTopOf="@+id/image_home" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favoritos"
        android:textAppearance="@style/Exo2_Regular_Subtitle"
        android:textColor="@color/pattern_light"
        app:layout_constraintEnd_toEndOf="@+id/image_favorite"
        app:layout_constraintStart_toStartOf="@+id/image_favorite"
        app:layout_constraintTop_toBottomOf="@+id/image_favorite" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_profile"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:layout_marginStart="@dimen/spacing_max_m"
        android:layout_marginEnd="@dimen/spacing_maximum"
        android:src="@drawable/ic_navigation_bar_profile_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/image_favorite"
        app:layout_constraintTop_toTopOf="@+id/image_favorite" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Perfil"
        android:textAppearance="@style/Exo2_Regular_Subtitle"
        app:layout_constraintEnd_toEndOf="@+id/image_profile"
        app:layout_constraintStart_toStartOf="@+id/image_profile"
        app:layout_constraintTop_toBottomOf="@+id/image_profile" />
</androidx.constraintlayout.widget.ConstraintLayout>