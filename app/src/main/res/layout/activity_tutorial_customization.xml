<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/image_background_step_one_customization">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/icon_refuse_first_step_customization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_refuse_transparent"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_title_first_customization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_step_one_customization"
        android:textAppearance="@style/Exo2_Semibold_Button_Text"
        android:textColor="@color/pattern_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/icon_refuse_first_step_customization"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_subtitle_first_step_customization"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_step_one_customization"
        android:textAppearance="@style/Exo2_Regular_Subtitle"
        android:textColor="@color/pattern_light"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_title_first_customization" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/step_one_nav_customization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:src="@drawable/ic_nav_customization_first_page"
        app:layout_constraintEnd_toEndOf="@+id/text_subtitle_first_step_customization"
        app:layout_constraintStart_toStartOf="@id/text_subtitle_first_step_customization"
        app:layout_constraintTop_toBottomOf="@id/text_subtitle_first_step_customization"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/go_to_second_step_customization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/spacing_medium"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:src="@drawable/ic_continue_filled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>