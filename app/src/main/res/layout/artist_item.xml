<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_homepage_second_item"
    android:padding="@dimen/spacing_medium"
    android:layout_margin="@dimen/spacing_medium">

    <ImageView
        android:id="@+id/photo_artist_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:src="@drawable/bg_artist"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/divider_artist"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:src="@drawable/bg_divider_product"
        app:layout_constraintTop_toBottomOf="@+id/photo_artist_list"
        app:layout_constraintStart_toStartOf="@+id/photo_artist_list"
        app:layout_constraintEnd_toEndOf="@+id/photo_artist_list"
        android:layout_marginTop="@dimen/spacing_medium" />

    <TextView
        android:id="@+id/name_artist_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider_artist"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="@dimen/spacing_s"
        android:text="artist name"
        android:textColor="@color/pattern_light"
        android:textAppearance="@style/Exo2_Bold_Price_Highlight_Pink"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/spacing_xsl"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/desc_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/name_artist_list"
        app:layout_constraintStart_toStartOf="@+id/name_artist_list"
        app:layout_constraintEnd_toEndOf="@+id/name_artist_list"
        android:paddingTop="@dimen/spacing_xs"
        android:text="bio artist"
        android:textColor="@color/pattern_light"
        android:textAppearance="@style/Exo2_Medium_Title_Product"
        />



</androidx.constraintlayout.widget.ConstraintLayout>