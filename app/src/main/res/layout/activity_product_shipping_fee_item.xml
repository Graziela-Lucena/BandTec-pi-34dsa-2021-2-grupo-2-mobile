<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_without_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/font_size_medium"
        android:fontFamily="@font/bold_exo2"
        android:textColor="@color/gray_text"
        android:text="@string/subtitle_shipping"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/link_add_new_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/link_shipping_add_address"
        android:textSize="@dimen/font_size_medium"
        android:textColor="@color/hot_blue"
        android:fontFamily="@font/bold_exo2"
        android:layout_marginStart="@dimen/spacing_s"
        app:layout_constraintStart_toEndOf="@+id/text_without_address"
        app:layout_constraintTop_toTopOf="@+id/text_without_address"/>

</androidx.constraintlayout.widget.ConstraintLayout>