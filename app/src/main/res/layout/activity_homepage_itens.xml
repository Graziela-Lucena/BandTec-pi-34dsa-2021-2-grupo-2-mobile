<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_homepage_item"
    android:padding="@dimen/spacing_medium">


    <ImageView
        android:id="@+id/shirt"
        android:layout_width="250dp"
        android:layout_height="283dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/img_product"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_promotion" />

    <ImageView
        android:id="@+id/divider_product"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:src="@drawable/bg_divider_product"
        app:layout_constraintTop_toBottomOf="@+id/shirt"
        app:layout_constraintStart_toStartOf="@+id/shirt"
        app:layout_constraintEnd_toEndOf="@+id/shirt"
        android:layout_marginTop="@dimen/spacing_medium" />

    <TextView
        android:id="@+id/title_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/divider_product"
        app:layout_constraintStart_toStartOf="@+id/divider_product"
        app:layout_constraintEnd_toEndOf="@+id/divider_product"
        android:layout_marginTop="@dimen/spacing_medium"
        android:text="@string/title_product_name"
        android:textColor="@color/pattern_light"
        android:textAppearance="@style/Exo2_Semibold_Button_Text"
        android:textSize="@dimen/spacing_bs"
        />

    <TextView
        android:id="@+id/old_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_old_price"
        app:layout_constraintTop_toBottomOf="@+id/title_product"
        app:layout_constraintStart_toStartOf="@+id/title_product"
        android:layout_marginTop="@dimen/spacing_medium"
        android:textColor="@color/pattern_light"
        android:textAppearance="@style/Exo2_Semibold_Button_Text"
        android:textSize="@dimen/spacing_xml"
        />
    <TextView
        android:id="@+id/new_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/subtitle_old_price"
        app:layout_constraintTop_toBottomOf="@+id/title_product"
        app:layout_constraintEnd_toEndOf="@+id/title_product"
        android:layout_marginTop="@dimen/spacing_medium"
        android:textColor="@color/price_blue"
        android:textAppearance="@style/Exo2_Semibold_Button_Text"
        android:textSize="@dimen/spacing_big"
        />


    <TextView
        android:id="@+id/text_promotion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_card_promotion"
        android:text="@string/tag_promotion"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="@dimen/spacing_xsl"
        android:textAppearance="@style/Exo2_Regular_Small_Subtitle"
        app:layout_constraintEnd_toEndOf="@+id/shirt"
        android:layout_marginTop="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        />







</androidx.constraintlayout.widget.ConstraintLayout>