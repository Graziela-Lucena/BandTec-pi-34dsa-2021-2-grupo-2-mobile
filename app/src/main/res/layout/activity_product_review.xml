<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_card_dark"
    android:padding="@dimen/spacing_medium"
    android:layout_marginBottom="@dimen/spacing_medium">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/user_name_comment_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/pattern_light"
        android:textSize="@dimen/font_size_medium"
        android:fontFamily="@font/semibold_exo2"
        android:text="@string/title_client_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_comment_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/medium_exo2"
        android:textSize="@dimen/font_size_medium"
        android:textColor="@color/light_gray_text"
        android:text="@string/text_comment_client"
        android:layout_marginStart="@dimen/spacing_medium"
        android:layout_marginEnd="@dimen/spacing_medium"
        android:layout_marginTop="@dimen/spacing_medium"
        app:layout_constraintStart_toStartOf="@+id/user_name_comment_review"
        app:layout_constraintTop_toBottomOf="@+id/user_name_comment_review"/>

</androidx.constraintlayout.widget.ConstraintLayout>